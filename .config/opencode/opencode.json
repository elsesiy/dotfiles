{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "github-copilot/claude-opus-4.6",
  "permission": {
    "bash": {
      "*": "ask",
      "git *": "allow",
      "git commit *": "deny",
      "git push *": "deny",
      "grep *": "allow",
      "rm *": "deny"
    }
  },
  "autoshare": false,
  "autoupdate": false
}
