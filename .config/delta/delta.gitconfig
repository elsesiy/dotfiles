[include]
  path = "./themes/catppuccin.gitconfig"
[core]
  pager = delta
[delta]
  features = catppuccin-mocha
  file-decoration-style = none
  hunk-header-style = file line-number syntax
  hyperlinks = true
  line-numbers = true
  navigate = true
  side-by-side = true
[interactive]
  diffFilter = delta --color-only
[pager]
  blame  = delta
  diff   = delta
  reflog = delta
  show   = delta
